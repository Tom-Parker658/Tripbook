<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_is_connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Online" />

        <ImageView
            android:id="@+id/img_is_connected"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_is_connected"
            app:layout_constraintEnd_toStartOf="@+id/text_is_connected"
            app:layout_constraintTop_toTopOf="@+id/text_is_connected"
            app:srcCompat="@drawable/outline_cloud_done_24"
            app:tint="@color/colorPositiveButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>