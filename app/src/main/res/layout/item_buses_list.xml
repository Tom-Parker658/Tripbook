<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="busListInfo"
            type="com.lado.travago.tripbook.model.admin.Bus.BusListInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:formatDateFromMillis="@{busListInfo.dateInMillis}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="02/11/2020" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buses"
            app:layout_constraintEnd_toStartOf="@+id/text_num_buses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_date" />

        <TextView
            android:id="@+id/text_num_buses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{busListInfo.totalBusNumber}"
            app:layout_constraintBottom_toBottomOf="@+id/textView28"
            app:layout_constraintEnd_toEndOf="@+id/text_date"
            app:layout_constraintTop_toTopOf="@+id/textView28"
            tools:text="05" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>