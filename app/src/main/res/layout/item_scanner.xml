<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="scannerDoc"
            type="com.google.firebase.firestore.DocumentSnapshot" />

        <variable
            name="buttonTag"
            type="com.lado.travago.tripbook.ui.agency.config_panel.viewmodel.ScannerConfigViewModel.ScannerButtonTags" />

        <variable
            name="clickListener"
            type="com.lado.travago.tripbook.ui.recycler_adapters.ScannerConfigClickListener" />


    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/scanner_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checkable="false"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_progress_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_scanner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_scanner_phone"
                app:layout_constraintEnd_toStartOf="@+id/view24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scanner_photo"
                tools:text="Ngarby Jean Eve" />

            <View
                android:id="@+id/view24"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/scanner_photo"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:contentDescription="@string/desc_agency_logo"
                app:layout_constraintBottom_toTopOf="@+id/text_scanner_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/text_scanner_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_scanner_name"
                tools:text="+237 6 99 88 55 44" />

            <Button
                android:id="@+id/btn_fire_scanner"
                style="@style/negativeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClickListener="@{() -> clickListener.onClick(buttonTag.BUTTON_FIRE_SCANNER, scannerDoc)}"
                android:text="@string/text_btn_scanner_config_fire"
                android:textColor="#000000"
                app:icon="@drawable/round_cancel_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_added_on" />

            <com.google.android.material.chip.Chip
                android:id="@+id/check_is_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:checked="false"
                android:fontFamily="@font/aclonica"
                android:onClickListener="@{()-> clickListener.onClick(buttonTag.BUTTON_IS_ADMIN, scannerDoc)}"
                android:text="@string/text_chip_scanner_config_admin"
                app:layout_constraintBottom_toTopOf="@+id/text_number_scan"
                app:layout_constraintEnd_toStartOf="@+id/adminLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_scanner_phone" />

            <TextView
                android:id="@+id/text_number_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:text="Total Scans: 150"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/text_added_on"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/check_is_admin" />

            <TextView
                android:id="@+id/text_added_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_fire_scanner"
                app:layout_constraintEnd_toStartOf="@+id/view24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_number_scan"
                tools:text="Added on: 26/10/2015" />

            <ImageView
                android:id="@+id/adminLogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/vip"
                app:layout_constraintBottom_toTopOf="@+id/text_number_scan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_scanner_phone"
                app:srcCompat="@drawable/baseline_supervised_user_circle_24" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_check_circle_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>