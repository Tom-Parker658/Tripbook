<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--        The listener to get the id of the current clicked item-->
        <variable
            name="clickListener"
            type="com.lado.travago.tripbook.ui.recycler_adapters.BusOverviewClickListener" />

        <variable
            name="busOverview"
            type="com.lado.travago.tripbook.model.booking.TownsOverview" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_town_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:fadingEdgeLength="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <!-- Title, secondary and supporting text -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_enter"
                style="?attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClickListener="@{()-> clickListener.onClick(busOverview)}"
                app:icon="@drawable/baseline_qr_code_scanner_24"
                app:iconGravity="end|textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/text_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAppearance="@style/titleStyle"
                app:layout_constraintEnd_toStartOf="@+id/btn_enter"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Yaounde" />

            <TextView
                android:id="@+id/text_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/text_town"
                app:layout_constraintTop_toBottomOf="@+id/text_town"
                tools:text=" Adamawa" />

            <TextView
                android:id="@+id/text_bookers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/baseline_person_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_scans_count"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_buses_count"
                app:layout_constraintTop_toTopOf="@+id/text_scans_count"
                tools:text="25 000" />

            <TextView
                android:id="@+id/text_buses_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/baseline_directions_bus_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_bookers_count"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_bookers_count"
                tools:text="25" />

            <TextView
                android:id="@+id/text_scans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/baseline_qr_code_scanner_24"
                app:drawableTint="@color/colorPositiveButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_bookers_count"
                app:layout_constraintTop_toBottomOf="@+id/btn_enter"
                tools:text="10 000" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>