<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.lado.travago.tripbook.model.admin.SummaryItem" />

        <variable
            name="clickListener"
            type="com.lado.travago.tripbook.ui.recycler_adapters.SummaryItemClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:clipToPadding="true"
        android:focusable="true"
        android:onClickListener="@{()-> clickListener.onClick(item)}"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/sub_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_title"
            app:srcCompat="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_logo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Online Transport Agency" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/main_title"
            app:layout_constraintTop_toBottomOf="@+id/main_title"
            tools:text="details, ..." />

        <TextView
            android:id="@+id/sub_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="1dp"
            android:gravity="end"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/main_title"
            app:layout_constraintTop_toBottomOf="@+id/sub_title"
            tools:text="Addition details...." />

        <ImageView
            android:id="@+id/image_ok"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scrollbarStyle="outsideInset"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/sub_title"
            app:layout_constraintEnd_toEndOf="@+id/main_title"
            app:layout_constraintTop_toTopOf="@+id/main_title"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/baseline_check_circle_24"
            app:tint="@color/colorPositiveButton" />

        <ImageView
            android:id="@+id/image_not_ok"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scrollbarStyle="outsideInset"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/sub_title"
            app:layout_constraintEnd_toEndOf="@+id/main_title"
            app:layout_constraintTop_toTopOf="@+id/main_title"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/stat_notify_error"
            app:tint="@color/colorNegativeButton" />

        <ImageView
            android:id="@+id/image_pending"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scrollbarStyle="outsideInset"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/sub_title"
            app:layout_constraintEnd_toEndOf="@+id/main_title"
            app:layout_constraintTop_toTopOf="@+id/main_title"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/outline_schedule_24"
            app:tint="@color/colorNeutralButton" />


        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>