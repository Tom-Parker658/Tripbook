<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="com.lado.travago.tripbook.ui.recycler_adapters.TripSearchResultsClickListener" />

        <variable
            name="agencyDoc"
            type="com.google.firebase.firestore.DocumentSnapshot" />

        <variable
            name="tripDoc"
            type="com.google.firebase.firestore.DocumentSnapshot" />

        <variable
            name="tripTime"
            type="com.lado.travago.tripbook.model.admin.TimeModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result_journey_tap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/verified_bitmap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/text_agency_name"
                    app:layout_constraintStart_toEndOf="@+id/text_agency_name"
                    app:layout_constraintTop_toTopOf="@+id/text_agency_name"
                    app:srcCompat="@drawable/baseline_verified_24"
                    app:tint="@color/colorPositiveButton" />

                <ImageView
                    android:id="@+id/agency_logo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/desc_agency_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/text_agency_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAppearance="@style/titleStyle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/ratingBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/agency_logo"
                    app:layout_constraintTop_toTopOf="@+id/agency_logo"
                    tools:text="General Voyage Express " />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="10"
                    android:rating="7.5"
                    app:layout_constraintBottom_toTopOf="@+id/btn_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/agency_logo"
                    app:layout_constraintTop_toBottomOf="@+id/text_agency_name"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/btn_normal"
                    style="@style/positiveButton"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:onClickListener="@{() -> clickListener.onClick(agencyDoc, tripDoc, tripTime,  false)}"
                    android:textSize="14sp"
                    app:icon="@drawable/baseline_payments_24"
                    app:layout_constraintEnd_toStartOf="@+id/btn_vip"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toEndOf="@+id/agency_logo"
                    app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                    tools:text="4 500 FCFA" />

                <TextView
                    android:id="@+id/text_agency_motto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_vip"
                    tools:text="~~Your comfort, Our Priority~~" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_vip"
                    style="@style/positiveButton"
                    android:layout_width="wrap_content"
                    android:onClickListener="@{() -> clickListener.onClick(agencyDoc, tripDoc, tripTime, true)}"
                    android:textSize="14sp"
                    app:icon="@drawable/baseline_vip_24"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_normal"
                    app:layout_constraintTop_toTopOf="@+id/btn_normal"
                    app:strokeColor="@color/vip"
                    tools:text="16 125 FCFA" />

                <TextView
                    android:id="@+id/text_interval_departure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/baseline_departure_board_24"
                    app:drawableTint="@color/colorNegativeButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text=" 22 : 35 " />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>