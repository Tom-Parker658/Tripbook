<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booker.book_panel.MyBooksFragment">


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_book_sort_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:scrollbars="horizontal"
        app:checkedChip="@id/chip_book_filter_departure_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:singleLine="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_book_filter_departure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/text_sort_book_by_departure_time"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_book_filter_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/text_sort_book_by_price" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_book_filter_vip_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/text_sort_book_by_vips" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_book_filter_done_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/text_sort_book_by_taken_already" />
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_book_filter_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/text_sort_book_by_distance" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_book_filter_expired_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/text_sort_book_by_expired" />

    </com.google.android.material.chip.ChipGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/books_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_book_sort_options"
        tools:listitem="@layout/item_summary_list" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_search_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:srcCompat="@drawable/baseline_search_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_book_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/fab_search_books"
        app:layout_constraintEnd_toEndOf="@+id/fab_search_books"
        app:layout_constraintStart_toStartOf="@+id/fab_search_books"
        app:srcCompat="@drawable/baseline_event_24"
        tools:ignore="SpeakableTextPresentCheck"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
