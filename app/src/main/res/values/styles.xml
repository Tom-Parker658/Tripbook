<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="font">@font/aclonica</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="font">@font/aclonica</item>
    </style>

    <!--Style for TextLayoutInput-->
    <style name="editTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="endIconTint">@color/colorAccent</item>
    </style>

    <style name="passwordTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="endIconMode">password_toggle</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:password">true</item>
        <item name="passwordToggleEnabled">true</item>
    </style>
    <!--Style for TextInputEditText-->
    <style name="textInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
    </style>
    <!--Style for auto complete editText-->
    <style name="textInputStyle.autoComplete" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--Style for headlines-->
    <style name="headlineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--next and previous Button styles-->
    <style name="navButtonStyles" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTintMode">src_in</item>
    </style>

<!--    Positive button-->
    <style name="positiveButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@color/colorPositiveButton</item>
        <item name="icon">@drawable/baseline_check_circle_24</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTintMode">src_in</item>
    </style>
<!--    Negative button-->
    <style name="negativeButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@color/colorNegativeButton</item>
        <item name="icon">@drawable/round_cancel_24</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTintMode">src_in</item>
    </style>
<!--    Neutral button-->
    <style name="neutralButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@color/quantum_grey</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTintMode">src_in</item>
    </style>

    <style name="infoTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorSecondaryDark</item>
    </style>

    <style name="style_recycler_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="style_image_label">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!--Splash theme-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:theme">@style/Theme.MaterialComponents.NoActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="font">@font/aclonica</item>
    </style>



    <color name="textDark">#000000</color>
</resources>